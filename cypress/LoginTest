describe('Login Test', () => {
  it('Should successfully login with valid credentials', () => {
    cy.visit('https://staging-v2-thess.lavaleriane.fr/#!/login); // Login sayfasını ziyaret edin

    cy.get('input[name="username"]').type('DrMetin'); // Kullanıcı adı alanına değer girin
    cy.get('input[name="password"]').type('Test'); // Şifre alanına değer girin

    cy.get('button[type="submit"]').click(); // Giriş yap butonuna tıklayın

    cy.url().should('/doctor-dashboard', '/dashboard'); // Yönlendirildiğiniz sayfanın URL'sinin '/dashboard' içerip içermediğini doğrulayın

   // cy.get('.welcome-message').should('contain', 'Hoş geldiniz'); // Kullanıcıyı karşılayan hoş geldiniz mesajının varlığını doğrulayın
  });

  it('Should display an error message with invalid credentials', () => {
    cy.visit('https://staging-v2-thess.lavaleriane.fr/#!/login'); // Login sayfasını ziyaret edin

    cy.get('input[name="username"]').type('abc@def.com'); // Geçersiz kullanıcı adı girin
    cy.get('input[name="password"]').type('1245'); // Geçersiz şifre girin

    cy.get('button[type="submit"]').click(); // Giriş yap butonuna tıklayın

    cy.get('Nom d'utilisateur ou mot de passe invalide').should('be.visible'); // Hata mesajının görünür olduğunu doğrulayın
  });
});
